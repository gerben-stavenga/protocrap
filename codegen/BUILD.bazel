rust_binary(
    name = "protocrap-codegen",
    srcs = ["src/main.rs"],
    edition = "2024",
    visibility = ["//visibility:public"],
    deps = [
        ":protocrap-codegen-lib",
        "@crates//:anyhow",
    ],
